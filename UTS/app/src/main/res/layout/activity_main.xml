<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Komponen Atas -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp">
        <ImageView
            android:id="@+id/logo_ig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/instagram_logo"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageButton
            android:id="@+id/love_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/share_icon_top"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/transparent" />
        <ImageButton
            android:id="@+id/share_icon_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navbar_top">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/stories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/navbar_top">
                <ImageView
                    android:id="@+id/user_story"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/user_story"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cerita Anda"
                    app:layout_constraintTop_toBottomOf="@id/user_story"
                    android:layout_marginTop="0dp"/>
                <ImageView
                    android:id="@+id/assets_story"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/asset_story"
                    app:layout_constraintStart_toEndOf="@id/user_story"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assets"
                    app:layout_constraintTop_toBottomOf="@id/assets_story"
                    app:layout_constraintStart_toEndOf="@id/user_story"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    />
                <ImageView
                    android:id="@+id/liga_story"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/liga_story"
                    app:layout_constraintStart_toEndOf="@id/assets_story"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liga"
                    app:layout_constraintTop_toBottomOf="@id/user_story"
                    app:layout_constraintStart_toEndOf="@id/user_story"
                    android:layout_marginStart="100dp"/>
                <ImageView
                    android:id="@+id/assets_story2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/asset_story"
                    app:layout_constraintStart_toEndOf="@id/liga_story"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cerita Anda"
                    app:layout_constraintTop_toBottomOf="@id/user_story"
                    android:layout_marginTop="0dp"
                    app:layout_constraintStart_toEndOf="@id/user_story"
                    android:layout_marginStart="145dp"/>
                <ImageView
                    android:id="@+id/liga_story2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/liga_story"
                    app:layout_constraintStart_toEndOf="@id/assets_story2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liga"
                    app:layout_constraintTop_toBottomOf="@id/user_story"
                    android:layout_marginTop="0dp"
                    app:layout_constraintEnd_toEndOf="@id/liga_story2"
                    android:layout_marginEnd="20dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/post1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/stories"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/pp_fufufafa"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/fufufafa_pp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:id="@+id/username_fufufafa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fufufafa"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/pp_fufufafa"
                    android:layout_marginStart="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="putra Mulyono"
                    android:textSize="10sp"
                    app:layout_constraintTop_toBottomOf="@id/username_fufufafa"
                    app:layout_constraintStart_toStartOf="@id/username_fufufafa"
                    android:textStyle="bold"/>
                <ImageButton
                    android:id="@+id/titik_tiga_ffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_titik_tiga"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"/>
                <ImageView
                    android:id="@+id/ffff_post"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/post_fufufafa"
                    app:layout_constraintTop_toBottomOf="@id/pp_fufufafa"/>
                <ImageButton
                    android:id="@+id/like_post_fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_heart"
                    app:layout_constraintTop_toBottomOf="@id/ffff_post"
                    android:backgroundTint="@color/white"/>
                <ImageButton
                    android:id="@+id/comment_ffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_comment"
                    app:layout_constraintTop_toBottomOf="@id/ffff_post"
                    app:layout_constraintStart_toEndOf="@id/like_post_fff"
                    android:backgroundTint="@color/white"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share"
                    app:layout_constraintTop_toBottomOf="@id/ffff_post"
                    app:layout_constraintStart_toEndOf="@id/comment_ffff"
                    android:backgroundTint="@color/white"/>
                <TextView
                    android:id="@+id/likedby1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disukai oleh ikhwan_Hanif"
                    app:layout_constraintTop_toBottomOf="@id/comment_ffff"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:id="@+id/uname_in_post1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fufufafa"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/likedby1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#Proud"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    app:layout_constraintTop_toBottomOf="@id/likedby1"
                    app:layout_constraintStart_toEndOf="@id/uname_in_post1"
                    android:layout_marginStart="5dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/post2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/post1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/pp_assets"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/assets_ugm_pp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:id="@+id/username_assets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="assets_ugm"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/pp_assets"
                    android:layout_marginStart="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sekolah Vokasi Universitas Gadjah Mada"
                    android:textSize="10sp"
                    app:layout_constraintTop_toBottomOf="@id/username_assets"
                    app:layout_constraintStart_toStartOf="@id/username_assets"
                    android:textStyle="bold"/>
                <ImageButton
                    android:id="@+id/titik_tiga_assets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_titik_tiga"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"/>

                <ImageView
                    android:id="@+id/assets_post"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/post_asset"
                    app:layout_constraintTop_toBottomOf="@id/pp_assets"/>

                <ImageButton
                    android:id="@+id/like_post_assets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_heart"
                    app:layout_constraintTop_toBottomOf="@id/assets_post"
                    android:backgroundTint="@color/white"/>
                <ImageButton
                    android:id="@+id/comment_assets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_comment"
                    app:layout_constraintTop_toBottomOf="@id/assets_post"
                    app:layout_constraintStart_toEndOf="@id/like_post_assets"
                    android:backgroundTint="@color/white"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share"
                    app:layout_constraintTop_toBottomOf="@id/assets_post"
                    app:layout_constraintStart_toEndOf="@id/comment_assets"
                    android:backgroundTint="@color/white"/>
                <TextView
                    android:id="@+id/likedby2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disukai oleh ikhwan_Hanif"
                    app:layout_constraintTop_toBottomOf="@id/comment_assets"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:id="@+id/uname_in_post2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assets UGM"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/likedby2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#Proud"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    app:layout_constraintTop_toBottomOf="@id/likedby2"
                    app:layout_constraintStart_toEndOf="@id/uname_in_post2"
                    android:layout_marginStart="5dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/post3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/post2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/pp_liga"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/liga_trpl_pp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:id="@+id/username_liga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liga TRPL"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/pp_liga"
                    android:layout_marginStart="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sekolah Vokasi Universitas Gadjah Mada"
                    android:textSize="10sp"
                    app:layout_constraintTop_toBottomOf="@id/username_liga"
                    app:layout_constraintStart_toStartOf="@id/username_liga"
                    android:textStyle="bold"/>
                <ImageButton
                    android:id="@+id/titik_tiga_liga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_titik_tiga"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"/>

                <ImageView
                    android:id="@+id/liga_post"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:src="@drawable/post_liga"
                    app:layout_constraintTop_toBottomOf="@id/pp_liga"
                    tools:layout_editor_absoluteX="1dp" />

                <ImageButton
                    android:id="@+id/like_post_liga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_heart"
                    app:layout_constraintTop_toBottomOf="@id/liga_post"
                    android:backgroundTint="@color/white"/>
                <ImageButton
                    android:id="@+id/comment_liga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_comment"
                    app:layout_constraintTop_toBottomOf="@id/liga_post"
                    app:layout_constraintStart_toEndOf="@id/like_post_liga"
                    android:backgroundTint="@color/white"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share"
                    app:layout_constraintTop_toBottomOf="@id/liga_post"
                    app:layout_constraintStart_toEndOf="@id/comment_liga"
                    android:backgroundTint="@color/white"/>
                <TextView
                    android:id="@+id/likedby3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disukai oleh ikhwan_Hanif"
                    app:layout_constraintTop_toBottomOf="@id/comment_liga"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:id="@+id/uname_in_post3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LigaTRPL"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/likedby3"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#Proud"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    app:layout_constraintTop_toBottomOf="@id/likedby3"
                    app:layout_constraintStart_toEndOf="@id/uname_in_post3"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:textColor="@color/white"
                    android:text="dummy"
                    app:layout_constraintTop_toBottomOf="@id/uname_in_post3"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <ImageButton
            android:id="@+id/home_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_active"
            android:layout_weight="1"
            android:backgroundTint="@color/white"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search"
            android:layout_weight="1"
            android:backgroundTint="@color/white"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_upload"
            android:layout_weight="1"
            android:backgroundTint="@color/white"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_reels"
            android:layout_weight="1"
            android:backgroundTint="@color/white"/>
        <ImageButton
            android:id="@+id/profile_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profile"
            android:layout_weight="1"
            android:backgroundTint="@color/white"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>